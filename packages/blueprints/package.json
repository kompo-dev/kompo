{
  "name": "@kompo/blueprints",
  "version": "0.1.3-beta.0",
  "private": true,
  "description": "Unified Kompo blueprints (Community & Enterprise)",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "import": "./src/types.ts"
    },
    "./kompo.config.schema.json": "./kompo.config.schema.json",
    "./blueprint.schema.json": "./blueprint.schema.json",
    "./kompo.catalog.schema.json": "./kompo.catalog.schema.json"
  },
  "files": [
    "src",
    "apps",
    "features",
    "templates"
  ],
  "scripts": {
    "clean": "rimraf .turbo node_modules tsconfig.tsbuildinfo",
    "dev:blueprint": "tsx watch scripts/generate-schemas.ts",
    "generate-schemas": "tsx scripts/generate-schemas.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "zod-to-json-schema": "^3.25.1"
  }
}
