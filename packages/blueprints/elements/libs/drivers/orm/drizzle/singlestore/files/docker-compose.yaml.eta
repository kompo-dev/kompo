name: <%= it.scope %>

services:
  <%= it.ormDriver %>-<%= it.alias %>:
    image: singlestore/cluster-in-a-box
    container_name: <%= it.ormDriver %>-<%= it.alias %>
    ports:
      - "<%= it.port %>:3306"
      - "8081:8080"
    environment:
      LICENSE_KEY: ${SINGLESTORE_LICENSE_KEY}
      ROOT_PASSWORD: password
    volumes:
      - <%= it.ormDriver %>_<%= it.alias %>_data:/var/lib/memsql

volumes:
  <%= it.ormDriver %>_<%= it.alias %>_data:
