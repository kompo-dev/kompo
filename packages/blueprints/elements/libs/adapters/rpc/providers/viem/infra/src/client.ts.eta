import { createPublicClient, http, type PublicClient, type Chain } from 'viem';
import { mainnet } from 'viem/chains';

// Allow passing specific chain config if needed, otherwise default to mainnet or configured chain
export const createClient = (chain: Chain = mainnet): PublicClient => {
  return createPublicClient({
    chain,
    transport: http(process.env.<%= it.alias.toUpperCase().replace(/-/g, '_') %>_RPC_URL)
  });
};

export const client = createClient();
