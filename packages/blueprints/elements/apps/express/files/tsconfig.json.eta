{
  "extends": "<%= it.tsconfigPath %>",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@<%= it.scope %>/domains/*": ["../../domains/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
