{
  "name": "kompo",
  "version": "0.1.0-beta.1",
  "private": true,
  "homepage": "https://github.com/kompo-dev/kompo#readme",
  "bugs": {
    "url": "https://github.com/kompo-dev/kompo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kompo-dev/kompo.git"
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check": "biome check --write .",
    "clean": "rimraf apps/**/.next apps/**/dist apps/**/build apps/**/.turbo apps/**/node_modules libs/**/dist libs/**/.turbo libs/adapters/**/node_modules libs/**/node_modules .turbo node_modules pnpm-lock.yaml",
    "clean:all": "turbo clean && pnpm run clean && pnpm store prune",
    "dev": "turbo run dev --parallel",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||''; if(!ua.startsWith('pnpm/')){console.error('This repo requires pnpm. Install it from https://pnpm.io and rerun: pnpm install'); process.exit(1)}\"",
    "postinstall": "turbo run build",
    "kompo": "tsx packages/cli/src/bin/kompo.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "sort": "sort-package-json \"package.json\" \"apps/*/package.json\" \"libs/*/package.json\"",
    "test": "turbo run test",
    "test:cli": "vitest run -c packages/vitest.config.ts",
    "test:cli:coverage": "vitest run -c packages/vitest.config.ts --coverage",
    "test:cli:watch": "vitest -c packages/vitest.config.ts",
    "test:e2e": "./scripts/test-e2e.sh",
    "test:templates": "./scripts/test-quick.sh",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@kompo/tsconfig": "workspace:*",
    "@turbo/gen": "latest",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "memfs": "^4.17.1",
    "rimraf": "^6.1.2",
    "sort-package-json": "^3.6.0",
    "tsx": "latest",
    "turbo": "latest",
    "typescript": "^5.7.3",
    "validate-branch-name": "^1.3.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.28.1"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^20.10.0",
      "typescript": "^5.7.3"
    }
  }
}
